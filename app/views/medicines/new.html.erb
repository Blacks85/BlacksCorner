<% @page_title = "BlacksCorner | New medicine" %>
<div class= "Add medicine">
	<h1>Sign Up</h1>
	<%= form_for(:medicine, :url => {:controller => 'medicines', :action => 'create'}) do |f| %>
		<p> Description:</br> 
		<%= f.text_field :description%> </p>	
		<%= f.submit :Add %>
	<% end %>

	<% if @medicine.errors.any? %>
		<ul class="medicines_Errors">
			<% for message_error in @medicine.errors.full_messages %>
				<li>* <%= message_error %></li>
			<% end %>
		</ul>
	<% end %>
</div>