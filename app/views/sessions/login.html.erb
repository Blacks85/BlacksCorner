<% @page_title = "Welcome to Blacks' corner" -%>

<div class="container_12">
  <div class="grid_6 prefix_3">
	<div id="Login_Form" class= "Sign_Form light-bg">
		<h1>Log in</h1>
			<%= form_tag(:action => 'login_attempt') do %>
				<p>Username or Email:</br> 
				<%= text_field_tag(:username_or_email) %></p> 
				<p>Password:</br> 
				<%= password_field_tag :login_password %></p> 
				<%= submit_tag("Log In") %>
			<% end %>
		</div>
	</div>
</div>