<div class="grid_12">
	<div id="Symptom" class= "light-bg round-corners shadow">
		<%= render 'shared/controlbar' %>
		<h1>Symptoms list</h1>
		<% if !@symptons.nil? %>
			<% @symptons.each do |f| %>
				<div class="sympton">
					<%= link_to "edit", edit_sympton_path(:id => f.id) %>
					<%= "[#{f.gravity}]" %> <%= f.description %> 
					<%= link_to "x", delete_sympton_path(:id => f.id), :confirm => "You sure?" %>
				</div>
			<% end %>
		<% end %>		
		<div class="clear"></div><br /><br />
		<%= link_to "Add symptom", add_sympton_path %>
	</div>
</div>