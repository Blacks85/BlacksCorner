<h1>Meals list</h1>

<% tmpDate = 0 %>
<% if !@meals.nil? %>
	<div class="meal">
		<% @meals.each do |m| %>
			<%= ("<br/><h4>#{m.consumed}</h2>").html_safe if tmpDate != m.consumed %>
			<div class="meal">
				[<%= link_to "delete", delete_meal_path(:id => m.id) %>]
				<%= ("<b>#{m.meal_type}:</b> <i>#{m.climate}, #{m.temperature.to_s}Â°C </i>").html_safe %>				
				<% m.foods.each do |f| %>
					<%= f.description %>,
				<% end %>
				<% m.medicines.each do |f| %>
					<%= f.description %>,
				<% end %>
				<% m.symptons.each do |f| %>
					<%= f.description %>,
				<% end %>
			</div>			
			<% tmpDate = m.consumed %>
		<% end %>
	</div>
<% end %>

