<% @page_title = "BlacksCorner | New meal" %>
<%= render 'shared/errors', :object => @meal %>
<div class= "Add meal">
	<h1>Sign Up</h1>
	<%= form_for(:meal, :url => {:controller => 'meals', :action => 'create'}) do |m| %>
		<p> Temperature:</br> 
		<%= m.number_field :temperature %> </p>
		<p> Consumed:</br> 
		<%= m.date_select :consumed %> </p>
		<p> Type:</br> 
		<%= m.select :meal_type, %w[Breakfast Brunch Lunch Snack Dinner Night Other]%> </p>
		<p> Feci:</br> 
		<%= m.select :feci, %w[Nothing Solid Average Liquid Diarrea]%> </p>
		<p> Blood pressure min:<br/>
		<%= m.text_field :bloodpressuremin %> </p>
		<p> Blood pressure max:<br/>
		<%= m.text_field :bloodpressuremax %> </p>
				
		<p>Foods <br/>
		<% Food.order(:description).each do |f| %>	
			<%= check_box_tag("foods[#{f.id}]") %><%= f.description %>
		<% end %></p>
		
		<p>Medicine <br/>
		<% Medicine.order(:description).each do |f| %>	
			<%= check_box_tag("medicines[#{f.id}]") %><%= f.description %>
		<% end %></p>
		
		<p>Symptoms <br/>
		<% Sympton.order(:description).each do |f| %>	
			<%= check_box_tag("symptons[#{f.id}]") %><%= f.description %>
		<% end %></p>
		
		<%= m.submit :Add %>
	<% end %>
</div> 